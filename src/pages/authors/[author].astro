---
import { getCollection } from "astro:content";
import { Debug } from 'astro:components';
import Wrapper from "@components/Wrapper"
import OuterBlock from "@components/OuterBlock";
import InnerBlock from "@components/InnerBlock"
import { getEntries } from "astro:content";

export async function getStaticPaths() {
	const authors = await getCollection('authors')
	return authors.map((author) => {
		return {
			params: { author: author.slug},
			props: { author }
		};
	})
}

const { author } = Astro.props
const { Content } = await author.render()
const articles = (await getCollection('articles'))
					.sort((a, b) => (a.data.date < b.data.date) ? 1 : -1)
					.filter((x) => x.data.authors.map((y) => y.slug)
					.includes(author.slug))
---

<Wrapper title="Simple Wrapper">
	<div class=`max-width font-serif text-center pt-12 pb-12 border-b-2 border-black` data-aos="fade-in">
				<div class="text-2xl pb-4">{author.data.name}</div>
				<Content />
	</div>
	{articles.map((i) => <OuterBlock article={i} overrideBlock=true />)} 



