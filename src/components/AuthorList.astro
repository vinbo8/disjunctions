---
	const { authors } = Astro.props
---
{
	authors.map((author, i, {length}) => {
	// var authorSlug = x.replace(/[.,]/g, '').replace(/\s/g, '-').toLowerCase()
		if (length - 1 === i) {
			return <span><a class="hover:text-p-red" href={`/authors/${author.slug}`}>{author.data.name}</a></span>
		}
		else {
			return <span><a class="hover:text-p-red" href={`/authors/${author.slug}`}>{author.data.name}</a>, </span>
		}
	})
}
