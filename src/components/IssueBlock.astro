---
	import { Image } from 'astro:assets';
	const { issue } = Astro.props
	const { Content } = await issue.render()
---


<div class=`flex max-width py-24 border-black border-b-2` style={`background-color: ${issue.data.colour}`} data-aos="fade-in">
	<Image src={issue.data.image} alt="" class="w-3/12 mr-8" />
	<div class="w-9/12 my-auto font-serif">
		<div class="mb-4"><a class="hover:text-p-red text-4xl" href={`${import.meta.env.BASE_URL}/${issue.slug}`}>{issue.data.title}</a></div>
		<div class="text-lg"><Content /></div>
	</div>
</div>


