---
	import { Image } from 'astro:assets';
	const { issue } = Astro.props
	const { Content } = await issue.render()

	const dateOptions = {year: 'numeric', month: 'long'};
	const date = issue.data.date.toLocaleDateString('en-GB', dateOptions);
---


<div class="w-full border-black border-b-2" style={`background-color: ${issue.data.colour}`}>
<div class=`max-width px-4 py-24 flex flex-col items-center text-center lg:flex-row lg:text-left` data-aos="fade-in">
	<Image src={issue.data.image} alt="" class="max-w-xl w-9/12 min-w-8 lg:w-4/12 object-contain mb-8 lg:mb-0 lg:mr-8" />
	<div class="w-8/12 my-auto font-serif">
		<div class="mb"><a class="hover:text-p-red text-4xl" href={`${import.meta.env.BASE_URL}/${issue.slug}`}>{issue.data.title}</a></div>
		<div class="mb-4 font-sans uppercase text-l">{date}</div>
		<div class="text-xl"><Content /></div>
	</div>
</div>
</div>


